{
    "compilerOptions": {
        "outDir": "./es",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "jsx": "react",
        "esModuleInterop": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "rootDirs": [
            "./src",
            "./types"
        ],
        "rootDir": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "types"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}